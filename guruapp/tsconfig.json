{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react-jsx",
      "incremental": true,
      "baseUrl": ".",
      "noImplicitAny": false,
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/**/*", "next.config.js"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
  }